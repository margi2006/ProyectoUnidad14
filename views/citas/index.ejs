<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>CONSULTORIO MEDICO</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-9ndCyUaIbzAi2FUVXJi0CjmCapSmO7SnpJef0486qhLnuZ2cdeRhO02iuK6FUUVM" crossorigin="anonymous">
</head>

<body>
  <div class="card text-center">
    <%- include('../../partials/header.ejs') %>
      <div class="card-body">
        <h5 class="card-title">Citas</h5>
        <p class="card-text">

        <table class="table">
          <thead>
            <tr>
              <th scope="col">id</th>
              <th scope="col">Paciente</th>
              <th scope="col">Doctor</th>
              <th scope="col">Especialidad</th>
              <th scope="col">Acciones</th>
            </tr>
          </thead>
          <tbody>
            <% consulta.forEach(x=> { %>

              <tr>
                <th scope="row">
                  <%= x.id %>
                </th>
                <td>
                  <%= x.paciente %>
                </td>
                <td>
                  <%= x.doctor %>
                </td>
                <td>
                  <%= x.especialidad %>
                </td>
                <td>
                  <a href="/citas/editar/<%= x.id %>" class="btn btn-success">Editar</a>
                  <a href="/citas/borrar/<%= x.id %>" class="btn btn-danger">Borrar</a>
                </td>
              </tr>

              <% }); %>

          </tbody>
        </table>

        </p>
        <a href="/citas/crear" class="btn btn-primary">Adicionar</a>
      </div>
      <div class="card-footer text-body-secondary">
        Â©Copyright 2023 - Todos los derechos reservados Giovanna Rueda
      </div>
  </div>
</body>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"
  integrity="sha384-geWF76RCwLtnZ8qwWowPQNguL3RmwHVBC9FhGdlKrxdiJJigb/j/68SIy3Te4Bkz" crossorigin="anonymous"></script>

</html>