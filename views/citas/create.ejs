<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>CONSULTORIO MEDICO</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-9ndCyUaIbzAi2FUVXJi0CjmCapSmO7SnpJef0486qhLnuZ2cdeRhO02iuK6FUUVM" crossorigin="anonymous">
</head>

<body>
  <div class="card text-center">
    <%- include('../../partials/header.ejs') %>
      <div class="card-body">
        <h5 class="card-title">Adicionar Cita</h5>
        <p class="card-text">

        <form action="/citas/salvar" method="POST">
          <div class="row g-3 align-items-center">
            <div class="col-auto">
              <label for="cedula" class="col-form-label">Paciente</label>
            </div>
            <div class="col-auto">
              <input type="text" id="cedula" name="cedula" class="form-control"
                placeholder="Ingrese Cédula">
            </div>
          </div>
          <div class="row g-3 align-items-center">
            <div class="col-auto">
              <label for="doctor" class="col-form-label">Especialidad & Doctor</label>
            </div>
            <div class="col-auto">
              <select name="doctor" id="doctor" required aria-placeholder="Seleccione un doctor">
                <option value="">Seleccione un doctor</option>
                <% consulta.forEach(x=> { %>
                  <option value='<%= x.especialidad + '|' + x.id %>'>
                    <%= x.especialidad + ' - ' + x.doctor %>
                  </option>

                  <% }); %>
              </select>
            </div>
          </div>

          <button type="submit" class="btn btn-primary">Guardar</button>
          <a href="/citas" class="btn btn-secondary">Cancelar</a>
        </form>

        </p>

      </div>
      <div class="card-footer text-body-secondary">
        ©Copyright 2023 - Todos los derechos reservados Giovanna Rueda
      </div>
  </div>
</body>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"
  integrity="sha384-geWF76RCwLtnZ8qwWowPQNguL3RmwHVBC9FhGdlKrxdiJJigb/j/68SIy3Te4Bkz" crossorigin="anonymous"></script>

</html>